<!DOCTYPE html>
<html>
<head>    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PennTex Ventures I Commercial Real Estate Development</title>
    <link rel="icon" href="~/Images/logo.png" type="image/png" />    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Gridmvc.css" rel="stylesheet" />    
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/gridmvc.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/common.js"></script>
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" />   
   
    <script>
        $(document).ready(function () {

            //////debugger;
            $(".date").each(function () {
                //////debugger;
                //  var j= $.noConflict();
                $(this).datepicker();
            });

        });
       
    </script>
    <script>
        $(document).ready(function () {
            ////debugger;
            var url = document.URL,
            shortUrl = url.substring(0, url.lastIndexOf("/"));
            var link = shortUrl.split('/');
            if (link.length == 3)
            {
                $('.nav li a').eq(0).addClass('active-link');
            }
            else
            {
                $(".nav li a").each(function () {

                    var name = $(this).attr("name");
                    if (shortUrl.indexOf(name) > 0) {
                        $(this).addClass("active-link");
                    }
                });
            }
            
        });
        $('#myTabs a').click(function (e) {
            e.preventDefault()
            $(this).tab('show')
        })
    </script>
          
</head>
<body>
    <div id="overlay" style="width: 100%;
    height: 100%;
    position: fixed;
    background: rgba(145, 146, 146, 0.68);
    z-index: 9999;
    top: 0;display:none">
        <div id="imagecontainer" style="width: 50px;
    position: fixed;
    top: 50%;
    left: 50%;">
            <img src="~/Images/loader.gif" style="height: 50px;width: 50px;" />
        </div>
    </div>

    <div id="overlay2" style="width: 100%;
    height: 100%;
    position: fixed;
    background: rgba(145, 146, 146, 0.68);
    z-index: 9999;
    top: 0;display:none">
        <div id="close-box"> 
            <div class="row">
                <div class="col-md-12">
                    <span class="glyphicon glyphicon-remove" style="cursor:pointer" id="close"></span>
                </div>
            </div>           
        </div>
        <div id="divContainer" class="uploadFile-container">
        </div>
</div>
   

    <div class="container-fluid navbar-fixed-top menu-top">
        <div class="container">@Html.Partial("_LoginPartial")</div>      
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/Projects/Index">
                        <img src="~/Images/logo.png" class="logo-img" />
                    </a>                 
                </div>
                <div class="navbar-collapse collapse" id="menu">
                    <ul class="nav navbar-nav">
                        <li><a href="/Projects/Index" name="Projects">Project</a></li>
                        <li><a href="/Agreementofsales/Index" name="Agreementofsales">Agreement Of Sale</a></li>
                        <li><a href="/Leases/Index" name="Leases">Lease</a></li>
                        <li><a href="/Loans/Index" name="Loans">Loans</a></li>
                        <li><a href="/Sellers/Index" name="Sellers">Sellers</a></li>
                        <li><a href="/Staffs/Index" name="Staffs">Staff</a></li>
                        <li><a href="/Tenants/Index" name="Tenants">Tenant</a></li>
                        <li><a href="/Lenders/Index" name="Lenders">Lender</a></li>
                        <li><a href="/Vendors/Index" name="Vendors">Vendors</a></li>
                        <li><a href="/Entities/Index" name="Entities">Entity</a></li>
                        @*<li><a href="/Architects/Index" name="Architects">Architect</a></li>
                        <li><a href="/ConstructionTypes/Index" name="ConstructionType">Construction Type</a></li>*@

                    </ul>                
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()       
    </div>
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - PennTex Ventures, LLC</p>
    </footer>
    <script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })

    $(document).on('click', '#close', function () {
        $('#overlay2').css('display', 'none');
    })
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
